@using DAL.Manager;
@model DrzaveResponse

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-lg-12 centriraj text-center">

        <!--Alerts -->
        <div class="alert alert-dismissible alert-danger" style="display: none" id="errorPanel">
            <button type="button" class="close">&times;</button>
            <h4>Greška!</h4>
            <p id="errorMsg"></p>
        </div>
        <div class="alert alert-dismissible alert-warning" style="display: none" id="warningPanel">
            <button type="button" class="close">&times;</button>
            <h4>Pažnja!</h4>
            <p id="warningMsg"></p>
        </div>
        <div class="alert alert-dismissible alert-info" style="display: none" id="infoPanel">
            <button type="button" class="close">&times;</button>
            <h4>Info!</h4>
            <p id="infoMsg"></p>
        </div>
        <!--/Alerts -->
    </div>
</div>


@if (Model.Success == false)
{
    <h1>An error occured:</h1>
    <p>@Model.Message</p>
}
else
{
    <table>
        <tbody>
            @foreach (var item in Model.Drzave)
            {
                <tr>
                    <td>@item.Naziv</td>
                </tr>
            }
        </tbody>
    </table>
}

@section scripts {
    <script src="~/Scripts/Pages/HomePage.js"></script>
}