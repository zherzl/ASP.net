                @Html.ValidationMessageFor(model => model.Racun.OznakaOperatera, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <label>Valuta plaćanja</label>
                @Html.EditorFor(model => model.Racun.ValutaPlacanja, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Racun.ValutaPlacanja, "", new { @class = "text-danger" })
            </div>
