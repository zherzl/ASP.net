        @Html.HiddenFor(model => model.Racun.UserId, new { htmlAttributes = new { @class = "" } })

        <div class="form-group">

        </div>
    </div>
    <div>
        <table id="stavkaTable" class="table table-condensed">
            <thead>
                <tr>
                    <th>Usluga</th>
                    <th>Cijena</th>
                    <th>Količina</th>
                    <th>Jedinica</th>
                    <th>Ukupno</th>
