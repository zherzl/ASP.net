@using EvidencijaRacunaObrta.Business.Response
@model CreateRacunResponse

@{
    ViewBag.Title = "Create";
}

<link href="~/Content/tableStavkaStyle.css" rel="stylesheet" />

<label>Template stavke za dodavanje</label>
<select id="ddlStavke" class="form-control"></select>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-3">
                <label>Odabir klijenta</label>
                <select class="form-control">
                    @foreach (var item in Model.Klijenti)
                    {
                        if (item.IsDefaultKlijent)
                        {
                            <option selected="selected" value="@item.Id">@item.NazivKlijenta | @item.OIB</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.NazivKlijenta | @item.OIB</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            @*@Html.LabelFor(model => model.Racun.BrojRacuna, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-2">
                <label>Broj računa</label>
                @Html.EditorFor(model => model.Racun.BrojRacuna, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Racun.BrojRacuna, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <label>Fiskalni broj računa</label>
                @Html.EditorFor(model => model.Racun.FiskalniBrojRacuna, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Racun.FiskalniBrojRacuna, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @*@Html.LabelFor(model => model.Racun.Mjesto, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label>Mjesto</label>
                @Html.EditorFor(model => model.Racun.Mjesto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Racun.Mjesto, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @*@Html.LabelFor(model => model.Racun.DatumVrijeme, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <label>Datum i vrijeme</label>
                @Html.EditorFor(model => model.Racun.DatumVrijeme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Racun.DatumVrijeme, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @*@Html.LabelFor(model => model.Racun.OznakaOperatera, htmlAttributes: new { @class = "control-label col-md-2" })*@
