<script type="text/javascript">
    $(function () {

        $("#forma").on("submit", function (e) {
            e.preventDefault();

            $.ajax({
                url: this.action,
                type: this.method,
                data: $(this).serialize(),
                success: function (data) {
                    $("#tblTijelo").append(data);
                }
            });

        });

    });
</script>