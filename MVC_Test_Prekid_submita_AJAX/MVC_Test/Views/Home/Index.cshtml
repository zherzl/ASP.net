    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("GetData", "Home", FormMethod.Post, new { id = "forma" }))
        {
            @Html.TextBox("broj", 1, new { id = "broj" })
            <input type="submit" name="submit" value="Submit" />
        }
    </div>
    <div class="col-md-4">
        <div id="nekiDiv">
            <table id="tablica" class="table table-condensed table-striped table-hover">
                <tbody id="tblTijelo">
                    <tr>
                        <td>Ime</td>
                        <td>Prezime</td>
                        <td>Grad</td>
                        <td>Drzava</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-4">

    </div>
</div>

